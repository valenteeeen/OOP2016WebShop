@model IEnumerable<Bitaka.Models.Products>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<br />
@using (Html.BeginForm("Index", "AllProducts", FormMethod.Get, new { @class = "form-inline" }))
{
    <p style="font-weight:bold;">
        Search: @Html.TextBox("SearchString", null, new { @class = "form-control" })

        <select name="cat" class="form-control" style="width:225px; display:inline-block;">
            <option value="all">----------</option>
            <option value="fashion">Fashion</option>
            <option value="electronics">Electronics</option>
            <option value="vehicles">Vehicles</option>
            <option value="animals">Animals</option>
            <option value="babies">Babies</option>
            <option value="home">Home</option>
        </select>
        <input type="submit" value="Search" class="btn btn-info" style="margin-right:30px;" />
        Sort by: @Html.ActionLink("Created", "Index", new { sortOrder = ViewBag.Date, SearchString = ViewBag.SearchString, cat = ViewBag.cat }) <span>,</span>
        @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.Price, SearchString = ViewBag.SearchString, cat = ViewBag.cat })
    </p>
}


